{
    "compilerOptions": {    
      "outDir": "libjs",
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": false,
      "experimentalDecorators": true,
      "declaration": true,
      "lib": ["es2015", "dom"],    
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true
    },
  
    "files": [
      "tstmp/lib.module.ts"      
    ],
  
    "angularCompilerOptions": {
     "genDir": "build",
     "flatModuleOutFile": "fintechneo-angulartemplates.js",
     "flatModuleId": "fintechneo-angulartemplates",
     "skipTemplateCodegen": true,
     "annotateForClosureCompiler": true,
     "strictMetadataEmit": true
   }
  }